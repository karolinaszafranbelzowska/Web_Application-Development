<script>
function login(){
  // define the allowed username and password
  var allowed_user = "belzowskakarolina@gmail.com"
  var allowed_password = "Srtb1218"

  // store the entered information in variables
  var log_user = document.getElementById("username").value
  var log_password = document.getElementById("password").value
 
  // check to see is are the credentials valid
  if(log_user === allowed_user &&  log_password === allowed_password){
    // if successful - redirect to the home page
    window.location.href = "GroceryShoppingIEHome.html";
  }
  else{
    // otherwise print an error message
    alert("Something went wrong, Try Again!")
  }
  
}
</script>
